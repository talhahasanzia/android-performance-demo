<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.talhahasanzia.performanceissues.memory.MemoryMainActivity">

    <Button
        android:layout_margin="40dp"
        android:text="Memory Leak"
        android:onClick="onMemoryLeakClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />

    <Button
        android:layout_margin="40dp"
        android:text="Memory Churn"
        android:onClick="onMemoryChurnClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

    <com.talhahasanzia.performanceissues.memory.MyCustomView
      android:id="@+id/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
